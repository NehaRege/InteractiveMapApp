<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/building_name"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/detail_travel_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:padding="20dp"
        />

    <TextView
        android:id="@+id/detail_travel_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="distance"
        android:padding="20dp"
        />

    <ImageView
        android:id="@+id/detail_building_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/detail_button_street_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/street_view"
        android:padding="20dp"
        android:layout_gravity="center"

        />

</LinearLayout>

</ScrollView>
